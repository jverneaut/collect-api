# Development (SQLite)
DATABASE_URL="file:./dev.db"

# Server
HOST="0.0.0.0"
PORT="3000"
LOG_LEVEL="info"

# Feature flags
GRAPHQL_ENABLED="true"
METRICS_ENABLED="true"
OPENAPI_ENABLED="true"
API_REFERENCE_ENABLED="true"

# Local storage (screenshots)
STORAGE_DIR="./storage"
STORAGE_PUBLIC_PATH="/storage"

# Micro-backends (required for ingestion)
MB_PAGES_FINDER_BASE_URL="http://localhost:8081"
MB_SCREENSHOTTER_BASE_URL="http://localhost:8082"
MB_TECHNOLOGIES_FINDER_BASE_URL="http://localhost:8083"
MB_COLORS_EXTRACTOR_BASE_URL="http://localhost:8084"
